#!/bin/sh
#
# chkconfig: 345 99 01
# description: news task server
#

TASKSERVERHOST=`hostname`

case $1 in
    start)
        echo "TaskServer starting"
        killall rmiregistry
        rmiregistry &
        /usr/bin/java -cp "/news/lib/*" -Djava.rmi.server.hostname=$TASKSERVERHOST -Djava.rmi.server.codebase=file:/news/lib/news.jar edu.stanford.pcl.news.task.TaskServer service &
        ;;
    restart)
        echo "TaskServer stopping"
        if pgrep -f "TaskServer service"; then
        kill `pgrep -f "TaskServer service"`
        fi
        echo "TaskServer starting"
        killall rmiregistry
        rmiregistry &
        /usr/bin/java -cp "/news/lib/*" -Djava.rmi.server.hostname=$TASKSERVERHOST -Djava.rmi.server.codebase=file:/news/lib/news.jar edu.stanford.pcl.news.task.TaskServer service &
        ;;
    status)
        if pgrep -f "TaskServer service"; then
            echo "TaskServer running"
        else
            echo "TaskServer stopped"
        fi
        ;;
    stop)
        echo "TaskServer stopping"
        if pgrep -f "TaskServer service"; then
            killall rmiregistry
            kill `pgrep -f "TaskServer service"`
        else
            echo "TaskServer already stopped"
        fi
        ;;
esac
